<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:elevation="5dp"
        android:background="@drawable/whitebadge"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/coderclub"
            android:layout_width="100dp"
            android:padding="8dp"

            android:layout_height="100dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/maven_pro_bold"
                android:layout_width="match_parent"
                android:textColor="#141414"

                android:text="Coders club"
                android:textSize="18dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:padding="4dp"
                android:textSize="13dp"
                android:layout_width="match_parent"
                android:text="Coders club is the hub for enhancing and showcasing the coding skills to
compete and shine in this computer era ."

                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:elevation="5dp"
        android:background="@drawable/whitebadge"
        android:layout_marginLeft="16dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#141414"
                android:fontFamily="@font/maven_pro_bold"
                android:layout_width="match_parent"
                android:text="Club Activities"
                android:textSize="18dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:padding="4dp"
                android:textSize="13dp"
                android:layout_width="match_parent"
                android:text="Every week a programming contest is being conducted by the club"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:padding="4dp"
                android:textSize="13dp"
                android:layout_width="match_parent"
                android:text="In this the students can submit their code for the problems in the
contest"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:padding="4dp"
                android:textSize="13dp"
                android:layout_width="match_parent"
                android:text="The top 10 students in the leader board will be encouraged and
appreciated for their effort."
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:padding="4dp"
                android:textSize="13dp"
                android:layout_width="match_parent"
                android:text="Hackathon like competitions are conducted."
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:padding="4dp"
                android:textSize="13dp"
                android:layout_width="match_parent"
                android:text="Workshops on FULL STACK by skill rack and E-Box recruitment
companies"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:padding="8dp"


            android:layout_height="100dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="5dp"
        android:background="@drawable/whitebadge"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:padding="8dp"
            android:layout_height="100dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/maven_pro_bold"
                android:layout_width="match_parent"
                android:textColor="#141414"
                android:text="Coding community"
                android:textSize="18dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="13dp"
                android:layout_width="match_parent"
                android:text="bla bla"

                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>